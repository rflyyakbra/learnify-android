<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D9CDB"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_back"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latihan Soal"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            android:layout_marginEnd="56dp"/>

        <HorizontalScrollView
            android:id="@+id/scrollNomor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/btnBack">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNum1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_icon_frame"
                    android:backgroundTint="#1565C0"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvNum2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="#2D9CDB"
                    android:textStyle="bold"
                    android:background="@drawable/bg_icon_frame"
                    android:backgroundTint="#E3F2FD"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvNum3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="3"
                    android:gravity="center"
                    android:textColor="#2D9CDB"
                    android:textStyle="bold"
                    android:background="@drawable/bg_icon_frame"
                    android:backgroundTint="#E3F2FD"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvNum4"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="4"
                    android:gravity="center"
                    android:textColor="#2D9CDB"
                    android:textStyle="bold"
                    android:background="@drawable/bg_icon_frame"
                    android:backgroundTint="#E3F2FD"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvNum5"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="5"
                    android:gravity="center"
                    android:textColor="#2D9CDB"
                    android:textStyle="bold"
                    android:background="@drawable/bg_icon_frame"
                    android:backgroundTint="#E3F2FD"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/bg_wave_blue"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerQuiz">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

<!--                <ImageView-->
<!--                    android:layout_width="20dp"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:src="@android:drawable/ic_menu_recent_history"-->
<!--                    app:tint="#2D9CDB"/>-->

<!--                <TextView-->
<!--                    android:id="@+id/tvTimer"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="05:00"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="#2D9CDB"-->
<!--                    android:layout_marginStart="8dp"/>-->
            </LinearLayout>

            <TextView
                android:id="@+id/tvSoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pertanyaan..."
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:lineSpacingExtra="6dp"
                android:layout_marginBottom="24dp"/>

            <LinearLayout
                android:id="@+id/layoutOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/optA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. Pilihan A"
                    android:padding="16dp"
                    android:background="@drawable/bg_option_default"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/optB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. Pilihan B"
                    android:padding="16dp"
                    android:background="@drawable/bg_option_default"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/optC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. Pilihan C"
                    android:padding="16dp"
                    android:background="@drawable/bg_option_default"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/optD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D. Pilihan D"
                    android:padding="16dp"
                    android:background="@drawable/bg_option_default"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/optE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E. Pilihan E"
                    android:padding="16dp"
                    android:background="@drawable/bg_option_default"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPembahasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembahasan"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Isi Pembahasan..."
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/text_gray"
                    android:layout_marginBottom="24dp"/>

                <Button
                    android:id="@+id/btnNextSoal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Lanjut Soal Berikutnya"
                    android:backgroundTint="#2D9CDB"
                    app:cornerRadius="12dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>