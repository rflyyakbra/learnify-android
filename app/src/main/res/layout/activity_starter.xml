<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/learnify_white"
    tools:context=".StarterActivity">

    <!-- TOP LOGO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_above="@id/bottom_card"
        android:layout_marginBottom="100dp">

        <ImageView
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:src="@drawable/ic_logo_starter"
            android:contentDescription="Logo Learnify"/>
    </LinearLayout>

    <!-- BOTTOM CARD -->
    <LinearLayout
        android:id="@+id/bottom_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/rounded_card_blue"
        android:padding="40dp">

        <!-- Indicator -->
        <View
            android:layout_width="58dp"
            android:layout_height="5dp"
            android:background="@color/learnify_white"
            android:alpha="0.7"
            android:layout_marginBottom="24dp"/>

        <!-- ViewPager -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Dots -->
        <LinearLayout
            android:id="@+id/dotsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center"/>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/learnify_white"
                android:background="@drawable/btn_outline"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/learnify_blue_primary_blue"
                android:background="@drawable/btn_filled"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
