<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerAchiev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#64B5F6"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pencapaian"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pantau progres belajar kamu!"
            android:textColor="#D1C4E9"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#9575CD"
            app:contentPadding="8dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvSubtitle">
            <TextView
                android:id="@+id/tvTotalBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/4 Terbuka"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerAchiev"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- INI ELEMEN YANG DIPERBAIKI (sesuai screenshot baris 83 Anda) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Target Skor TOBK"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        <EditText
                            android:id="@+id/etTarget"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Contoh: 700"
                            android:inputType="number"/>
                        <Button
                            android:id="@+id/btnSaveTarget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Simpan"
                            android:backgroundTint="#64B5F6"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvGapInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kurang 0 poin lagi menuju target!"
                        android:textColor="#F44336"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Riwayat Nilai TOBK" android:textStyle="bold" android:layout_marginBottom="8dp"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartTOBK"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Daftar Penghargaan" android:textStyle="bold" android:textSize="18sp" android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="8dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:id="@+id/imgAch1" android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_agenda" app:tint="#9E9E9E"/>
                    <!-- Fix untuk elemen yang menyebabkan error sebelumnya (sudah ada) -->
                    <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="16dp">
                        <TextView android:id="@+id/tvTitleAch1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Studious" android:textStyle="bold" android:textColor="#9E9E9E"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Selesaikan 5 Materi Belajar" android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="8dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:id="@+id/imgAch2" android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_popup_sync" app:tint="#9E9E9E"/>
                    <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="16dp">
                        <TextView android:id="@+id/tvTitleAch2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quickie" android:textStyle="bold" android:textColor="#9E9E9E"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Selesaikan 10 Materi Belajar" android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAch3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="8dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:id="@+id/imgAch3" android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/star_big_off" app:tint="#9E9E9E"/>
                    <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="16dp">
                        <TextView android:id="@+id/tvTitleAch3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ambitious" android:textStyle="bold" android:textColor="#9E9E9E"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Selesaikan 15 Materi Belajar" android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAch4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="8dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:id="@+id/imgAch4" android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/btn_star_big_on" app:tint="#9E9E9E"/>
                    <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="16dp">
                        <TextView android:id="@+id/tvTitleAch4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Perfectionist" android:textStyle="bold" android:textColor="#9E9E9E"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Selesaikan 20 Materi Belajar" android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:elevation="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout android:id="@+id/navLearn" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_book" app:tint="#BDBDBD"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Learn" android:textSize="12sp" android:textColor="#BDBDBD" android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/navSearch" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_search" app:tint="#BDBDBD"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Search" android:textSize="12sp" android:textColor="#BDBDBD" android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/navAchievement" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_my_calendar" app:tint="#673AB7"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Achievement" android:textStyle="bold" android:textSize="12sp" android:textColor="#673AB7" android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/navProfile" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_myplaces" app:tint="#BDBDBD"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Profile" android:textSize="12sp" android:textColor="#BDBDBD" android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>