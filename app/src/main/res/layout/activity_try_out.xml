<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- ================= HEADER ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EF5350"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_back"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode Try Out"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

        <!-- ðŸ”¥ BUTTON LIST SOAL (BOTTOM SHEET TRIGGER) -->
        <!-- Nomor Soal (Window 5) -->
        <HorizontalScrollView
            android:id="@+id/scrollNomor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/btnBack">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNum1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="6"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/bg_icon_frame"
                    android:backgroundTint="#FFEBEE"
                    android:textColor="#EF5350"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvNum2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="7"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/bg_icon_frame"
                    android:backgroundTint="#FFEBEE"
                    android:textColor="#EF5350"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvNum3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="8"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/bg_icon_frame"
                    android:backgroundTint="#B71C1C"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvNum4"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="9"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/bg_icon_frame"
                    android:backgroundTint="#FFEBEE"
                    android:textColor="#EF5350"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvNum5"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="10"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/bg_icon_frame"
                    android:backgroundTint="#FFEBEE"
                    android:textColor="#EF5350"
                    android:layout_marginEnd="12dp"/>

                <!-- ðŸ”¥ PERBAIKAN DI SINI: ID diubah menjadi unik -->
                <ImageView
                    android:id="@+id/btnQuestionList"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="6dp"
                    android:background="@drawable/bg_icon_frame"
                    android:backgroundTint="#FFFFFF"
                    android:src="@drawable/ic_question_grid"
                    app:tint="#EF5350"/>
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= CONTENT ================= -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/bg_wave_blue"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/headerQuiz"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Timer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="#EF5350"/>

                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:textStyle="bold"
                    android:textColor="#EF5350"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Soal -->
            <TextView
                android:id="@+id/tvSoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pertanyaan..."
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:lineSpacingExtra="6dp"
                android:layout_marginBottom="24dp"/>

            <!-- Opsi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView android:id="@+id/optA" style="@style/OptionStyle"/>
                <TextView android:id="@+id/optB" style="@style/OptionStyle"/>
                <TextView android:id="@+id/optC" style="@style/OptionStyle"/>
                <TextView android:id="@+id/optD" style="@style/OptionStyle"/>
                <TextView android:id="@+id/optE" style="@style/OptionStyle"/>
            </LinearLayout>

            <!-- Next -->
            <Button
                android:id="@+id/btnNextSoal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Konfirmasi Jawaban"
                android:backgroundTint="#EF5350"
                app:cornerRadius="12dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
