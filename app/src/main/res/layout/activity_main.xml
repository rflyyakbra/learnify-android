<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- HEADER yang FIX (Tidak Bergulir) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="24dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halo, Pejuang UTBK!"
            android:textSize="16sp"
            android:textColor="@color/text_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learnify"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- KONTEN yang BERGULIR (NestedScrollView) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerHome"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Bagian ini sebelumnya adalah header, sekarang konten dimulai di sini -->

            <androidx.cardview.widget.CardView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#64B5F6">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="194dp"
                        android:layout_height="187dp"
                        android:layout_marginEnd="-20dp"
                        android:layout_marginBottom="-20dp"
                        android:src="@drawable/ic_ilustrasi_guru"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvBannerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Siap UTBK 2025?"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pelajari materi &amp;\nlatihan soal sekarang!"
                        android:textColor="#E0E0E0"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvBannerTitle"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/lblTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topik Populer"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:layout_marginTop="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_pu_logic"/>
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Penalaran Umum" android:textStyle="bold" android:layout_marginStart="16dp"/>
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_back" android:rotation="180" app:tint="#BDBDBD"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/pengetahuan_kuantitatif"/>
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Pengetahuan Kuantitatif" android:textStyle="bold" android:layout_marginStart="16dp"/>
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_back" android:rotation="180" app:tint="#BDBDBD"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/literasi_indonesia"/>
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Literasi B.Indonesia" android:textStyle="bold" android:layout_marginStart="16dp"/>
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_back" android:rotation="180" app:tint="#BDBDBD"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- START: TAMBAHAN KONTEN BARU -->

            <!-- Header Kutipan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inspirasi Belajar Hari Ini"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"/>

            <!-- Horizontal Scroll View untuk Kutipan Harian -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingHorizontal="24dp"
                android:clipToPadding="false"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">
                <!-- LinearLayout di dalam HorizontalScrollView agar bisa menampung banyak card -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card Kutipan Harian 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#BBDEFB">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="“With great power comes great responsibility.”"
                                android:textSize="16sp"
                                android:textStyle="italic"
                                android:textColor="@color/text_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- Uncle Ben"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#424242"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="end"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Tambahan Card Kutipan Harian 2 (Contoh konten yang digulir) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#C8E6C9">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="“Belajar adalah harta yang akan mengikuti pemiliknya kemanapun dia pergi.”"
                                android:textSize="16sp"
                                android:textStyle="italic"
                                android:textColor="@color/text_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- Pepatah Cina"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#424242"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="end"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Tambahan Card Kutipan Harian 3 (Contoh konten yang digulir) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFCDD2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="“Gagal sekali bukan berarti gagal selamanya. Coba lagi, hari ini.”"
                                android:textSize="16sp"
                                android:textStyle="italic"
                                android:textColor="@color/text_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- Tim Learnify"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#424242"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="end"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>


            <!-- Header Latihan Soal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rekomendasi Latihan"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:layout_marginStart="24dp"/>

            <!-- Horizontal Scroll View untuk Rekomendasi Latihan -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingHorizontal="24dp"
                android:clipToPadding="false"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">
                <!-- LinearLayout di dalam HorizontalScrollView agar bisa menampung banyak card -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card Latihan Soal Harian 1 (Visual Break) - Dibuat sedikit lebih kecil agar lebih mudah digulir -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FBC02D">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvChallengeTitle1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tantangan Harian Tersedia!"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginStart="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/tvSubText1"/>

                            <TextView
                                android:id="@+id/tvSubText1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kerjakan 10 soal untuk membuka lencana baru."
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@android:drawable/btn_star_big_on"
                                app:tint="@color/white"
                                android:layout_marginEnd="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Tambahan Card Latihan Soal Harian 2 (Contoh konten yang digulir) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#80CBC4">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Soal Pengetahuan Kuantitatif"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginStart="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/tvSubText2"/>

                            <TextView
                                android:id="@+id/tvSubText2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Materi: Persamaan Kuadrat (5 soal)"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@android:drawable/ic_menu_edit"
                                app:tint="@color/white"
                                android:layout_marginEnd="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Tambahan Card Latihan Soal Harian 3 (Contoh konten yang digulir) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FF8A65">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quiz Penalaran Umum"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginStart="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/tvSubText3"/>

                            <TextView
                                android:id="@+id/tvSubText3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coba mini-quiz 3 menit!"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@android:drawable/ic_menu_help"
                                app:tint="@color/white"
                                android:layout_marginEnd="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- END: TAMBAHAN KONTEN BARU -->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:elevation="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_book"
                app:tint="#2196F3"/> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#BDBDBD"/> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="12sp"
            android:textColor="#BDBDBD"
            android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navAchievement"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="#BDBDBD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievement"
                android:textSize="10sp"
                android:textColor="#BDBDBD"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="#BDBDBD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#BDBDBD"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>